                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="130dp"
                android:layout_marginTop="20dp"
                android:text="Contactanos"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="110dp"
                android:layout_marginTop="0dp"
                android:text="Cra 8 b N 92a 67"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="0dp"
                android:text="mosnterburger@gmail.com"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="0dp"
                android:text="Telefono: 26587465"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="0dp"
                android:text="  WhatsApp: 3159788644"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="50dp"
                android:text="siguenos en todas nuestras redes!"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/ButtonTwitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fui_ic_twitter_bird_white_24dp"
                android:background="#FA3C32"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/ButtonFacebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fui_ic_facebook_white_22dp"
                android:background="@color/primaryColor"
                android:layout_marginTop="-50dp"
                android:layout_marginHorizontal="220dp"/>
            <TextView
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:text="Nuestra ubicacion a un clic"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/ButtonMaps"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/maps"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="120dp"/>


        </LinearLayout>




    </ScrollView>





</FrameLayout>