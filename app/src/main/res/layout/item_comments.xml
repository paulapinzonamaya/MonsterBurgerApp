<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_productos"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="28dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/foto_usuario"
            android:layout_width="108dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_baseline_person_24"

            />

        <TextView
            android:id="@+id/tvItemCommentsUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"

            android:layout_toEndOf="@+id/foto_usuario"
            android:layout_toRightOf="@+id/foto_usuario"
            android:layout_alignParentTop="true"/>


        <TextView
            android:id="@+id/tvItemCommentsScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItemCommentsUser"
            android:layout_toEndOf="@+id/foto_usuario"
            android:layout_toRightOf="@+id/foto_usuario"
            android:text="5/5"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemCommentsComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvItemCommentsScore"
            android:layout_toEndOf="@+id/foto_usuario"
            android:layout_toRightOf="@+id/foto_usuario"
            android:text="La mejor tienda de todas"

            />



    </RelativeLayout>


</androidx.cardview.widget.CardView>